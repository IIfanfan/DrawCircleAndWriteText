<UserControl x:Class="RP.AGVDispatch.Monitor.DrawCircleAndWriteText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RP.AGVDispatch.Monitor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="20" Height="20">
        <Ellipse  Name="EllipseName" Fill="Yellow" Stroke="Blue" Width="20"  Height="20"  VerticalAlignment="Center"  HorizontalAlignment="Center" RenderTransformOrigin="1,0.200" Loaded="Ellipse_Loaded" Grid.Column="1"/>
        <TextBlock Text="15" Foreground="White" Name="TextName" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1"/>
    </Grid>
</UserControl>
